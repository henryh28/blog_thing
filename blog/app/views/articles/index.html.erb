<header>All entries</header>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>

  <% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.content %></td>
    <td><%= link_to "Show", article_path(article) %></td>
    <td><%= link_to "Edit", edit_article_path(article) %></td>
    <td><%= link_to "Delete", article_path(article), method: :delete, data: { confirm: "Confirm deletion?" } %></td>
  </tr>
  <% end %>
</table>

<br>

<%= link_to "Return Home", root_path %>
